import pygame
import pygame.camera
import datetime
import time
import re

pygame.camera.init()
pygame.camera.list_cameras()
fcam = pygame.camera.Camera("/dev/frontcam", (1024,768))
bcam = pygame.camera.Camera("/dev/backcam", (1024,768))
fcam.start()
bcam.start()
while(1):
	timestr = time.strftime("%Y%m%d-%H%M%S")
	i = fcam.get_image()
	pygame.image.save(i, "/home/pi/marsbotcontrol/stills/f-" + timestr + ".png")
        print('saved front image')
	j = bcam.get_image()
	pygame.image.save(j, "/home/pi/marsbotcontrol/stills/b-" + timestr + ".png")
        print('saved back image\n')
	time.sleep(1)
